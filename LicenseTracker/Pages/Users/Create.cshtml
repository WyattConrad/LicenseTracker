@page
@model LicenseTracker.Pages.Users.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>User</h4>
<hr />
<form method="post">
<div class="row">

    <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="NewUser.Name" class="control-label"></label>
                <input asp-for="NewUser.Name" class="form-control" />
                <span asp-validation-for="NewUser.Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="NewUser.EmailAddress" class="control-label"></label>
                <input asp-for="NewUser.EmailAddress" class="form-control" />
                <span asp-validation-for="NewUser.EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">

                <label asp-for="NewUser.TeamId" class="control-label"></label>
                <select asp-for="NewUser.TeamId" class ="form-select" asp-items="Model.TeamSL">
                    <option value="">-- Select a Team --</option>
                </select>
                <span asp-validation-for="NewUser.TeamId" class="text-danger"></span>
            </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Applications" class="control-label"></label>
            <select asp-for="Applications" class="form-control" size="@Model.ApplicationSL.Count()" asp-items="Model.ApplicationSL"></select>
        </div>
    </div>

</div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>
<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
