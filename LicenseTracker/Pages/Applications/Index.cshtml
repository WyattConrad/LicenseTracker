@page
@model LicenseTracker.Pages.Applications.IndexModel

@{
    ViewData["Title"] = "Applications";
}

<h1>Applications</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Application[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Application[0].ContractTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Application[0].ContractDuration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Application[0].CostPerUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Application[0].MaxUsers)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Application) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContractTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContractDuration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CostPerUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxUsers)
            </td>
            
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
